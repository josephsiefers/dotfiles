	name = Joseph Siefers
	email = joseph.siefers@gmail.com
[core]
	editor = subl -w
[diff]
	tool = diffmerge
[difftool "diffmerge"]
	cmd = diffmerge $LOCAL $REMOTE
[merge]
	tool = diffmerge
[mergetool "diffmerge"]
	cmd = "diffmerge --merge --result=\"$MERGED\" \"$LOCAL\" \"$(if test -f \"$BASE\"; then echo \"$BASE\"; else echo \"$LOCAL\"; fi)\" \"$REMOTE\""
	trustExitCode = true

[alias]
    co = checkout
    st = status
    br = branch
    a = add
    aa = add --all

    #add all (and only) modified (git am is an actual command :S )
    amm = add -u

    #add all (and only) untracked
    au = !"git status --porcelain | awk '/\\?\\?/{ print $2 }' | xargs git add"

    dt = difftool
    dc = diff --cached
    c = commit -m
	r = checkout --
	ss = stash save
	sa = stash apply
	sp = stash pop
	sl = stash list
	sd = stash drop
	mt = mergetool
	rb = rebase
	rbc = rebase --continue
	rba = rebase --abort
	
	pff = pull --ff-only
	pom = push origin master
	amend = commit --amend
	dh1 = diff HEAD~1
	showaliases = config --get-regexp alias
	cdf = clean -df
	cp = cherry-pick

	#Divergence (commits we added and commits remote added)
	div = divergence

	# Goodness (summary of diff lines added/removed/total)
	gn = goodness
	gnc = goodness --cached

	# Fancy logging.
    #   h = head
    #   hp = head with patch
    #   rc = recent commits, only current branch
    #   ra = recent commits, all reachable refs
    #   l = all commits, only current branch
    #   la = all commits, all reachable refs
    head = !git l -1
    h = !git head
    hp = "!. ~/.githelpers && show_git_head"
    rc = !git l -30
    ra = !git rc --all
    l = "!. ~/.githelpers && pretty_git_log"
    la = !git l --all
	
[color]
	ui = true
[push]
	default = simple
