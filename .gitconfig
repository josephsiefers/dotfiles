	name = Joseph Siefers
	email = joseph.siefers@gmail.com
[core]
	editor = subl -w
[diff]
	tool = diffmerge
[difftool "diffmerge"]
	cmd = diffmerge $LOCAL $REMOTE
[merge]
	tool = diffmerge
[mergetool "diffmerge"]
	cmd = "diffmerge --merge --result=\"$MERGED\" \"$LOCAL\" \"$(if test -f \"$BASE\"; then echo \"$BASE\"; else echo \"$LOCAL\"; fi)\" \"$REMOTE\""
	trustExitCode = true

[alias]
    co = checkout
    com = checkout master
		cod = checkout develop
    cot = checkout --theirs
    coo = checkout --ours

    st = status
    br = branch
    a = add
    aa = add --all

    #add all modified files, reviewing changes in each
    aap = add --all -p

    #add all modified (git am is an actual command :S ) without review
    aam = add -u

    #add all (and only) untracked
    aau = !"git status --porcelain | awk '/\\?\\?/{ print $2 }' | xargs git add"

    dt = difftool
    dc = diff --cached
    c = commit -m
	r = checkout --
	ss = stash save
	sa = stash apply
	sp = stash pop
	sl = stash list
	sd = stash drop
	
	m = merge
	mt = mergetool
	mm = merge master
	mp = merge prod

	rb = rebase
	rbc = rebase --continue
	rba = rebase --abort

	#view conflicted files
	vc = diff --name-only --diff-filter=U

	rh = reset --hard
	
	pff = pull --ff-only
	pom = push origin master
	amend = commit --amend
	dh1 = diff HEAD~1
	showaliases = config --get-regexp alias
	cdf = clean -df

	#the -x makes sure that the sha1 of the original commit is inserted into the commit message
	cp = cherry-pick -x --signoff
	#to edit the commit message before cherry-picking
	cpe = cherry-pick --edit
	#for squashing cherry-picked commits
	cpnc = cherry-pick --no-commit 

	#Divergence (commits we added and commits remote added)
	div = divergence

	# Goodness (summary of diff lines added/removed/total)
	gn = goodness
	gnc = goodness --cached

	# Fancy logging.
    #   h = head
    #   hp = head with patch
    #   rc = recent commits, only current branch
    #   ra = recent commits, all reachable refs
    #   l = all commits, only current branch
    #   la = all commits, all reachable refs
    head = !git l -1
    h = !git head
    hp = "!. ~/.githelpers && show_git_head"
    rc = !git l -30
    ra = !git rc --all
    l = "!. ~/.githelpers && pretty_git_log"
    la = !git l --all
	
[color]
	ui = true
[push]
	default = simple
